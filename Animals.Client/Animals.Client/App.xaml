<?xml version="1.0" encoding="utf-8" ?>
<unity:PrismApplication
    xmlns:unity="http://prismlibrary.com"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:resources="clr-namespace:Animals.Client.Resources"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Animals.Client.App">
    <unity:PrismApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <resources:Color/>
                <resources:Size/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <Style x:Key="TitleStyle" TargetType="Label">
            <Setter Property="FontSize" Value="{StaticResource TitleSize}" />
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="TextColor" Value="{StaticResource TitleColor}"/>
        </Style>
        <Style x:Key="BigTitleStyle" TargetType="Label">
            <Setter Property="FontSize" Value="{StaticResource BigTitleSize}" />
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <Setter Property="TextColor" Value="{StaticResource BigTitleColor}"/>
        </Style>
    </unity:PrismApplication.Resources>
</unity:PrismApplication>